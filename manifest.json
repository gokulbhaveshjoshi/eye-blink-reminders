{
    "manifest_version": 3,
    "name": "Eye Care Reminder",
    "version": "1.0",
    "description": "Reminds users to rest their eyes at intervals",
    "permissions": ["storage", "scripting", "alarms", "tabs"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "action": {
      "default_popup": "popup.html",
      "default_icon": "icon.png"
    },
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*/*", "http://*/*"],
        "js": ["content.js"]
      }
    ]
  }
